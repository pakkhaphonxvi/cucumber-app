    <style name="button_bg" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_login_page_bg</item>
        <item name="android:textColor">#000000</item>
        <item name="shapeAppearance">@style/button_corner</item>
        <item name="fontFamily">@font/advent_pro_medium</item>
    </style>

    <style name="button_page_userlist" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/button_login_page_bg</item>
        <item name="shapeAppearance">@style/button_corner2</item>
        <item name="fontFamily">@font/advent_pro_medium</item>
    </style>

    <style name="button_chat" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/chat</item>
    </style>

    <style name="button_corner2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>


    <style name="button_corner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="button_corner1" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="edittext_bg" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">#fff</item>
        <item name="hintTextColor">#fff</item>

    </style>

    <style name="edittext_bg1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#ffffff</item>
        <item name="strokeColor">#ffffff</item>
        <item name="shapeAppearance">@style/button_corner1</item>
        <item name="hintTextColor">#ffffff</item>
    </style>

    <style name="edittext_bg2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#ffffff</item>
        <item name="shapeAppearance">@style/button_corner</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">#000000</item>
    </style>
    
    <style name="spinner_bg" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">#ffffff</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="endIconDrawable">@drawable/ic_baseline_arrow_drop_down_24</item>
        <item name="endIconTint">#ffffff</item>
    </style>

    <style name="inputText">
        <item name="colorPrimary">@color/black</item>
    </style>


